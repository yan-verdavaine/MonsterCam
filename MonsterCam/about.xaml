                    </RichTextBox>

                </Grid>


            </controls:PivotItem>

            <controls:PivotItem Header="eula" Margin="12,28,12,30">
                <Grid>

                    <ListBox x:Name="lbEula" ScrollViewer.VerticalScrollBarVisibility="Auto"
         Margin="10" Height="540">
